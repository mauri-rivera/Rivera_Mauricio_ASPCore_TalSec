@model Usuario

<div class=formularioSesion>
    <h1>Welcome!</h1>
    <h2>Please give your name:</h2>
    <form asp-action="Index" asp-controller="Home" method="POST">
        <input asp-for="Nombre" class="cuadroTexto">
        <span asp-validation-for="Nombre" class="color"></span>
        <div class="botonEnvio">
            <button class="submit">Submit</button>
        </div>
    </form>
</div>